<!---  API taking wind readings from Open Weather App --->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
  var settings = {
    "async": true,
    "crossDomain": true,
    "url": "https://api.openweathermap.org/data/2.5/weather?q=cork&appid=286e86f2a2706bfb9f508eedc061b148&units=metric",
    "method": "GET"
  }

  $.ajax(settings).done(function (response) {
    console.log(response);
    var content = response.wind.speed;
    var content1 = response.main.temp;
    var content2 = response.main.humidity;
    var content3 = response.main.pressure;
    $("#windSpeed").append(content);
    $("#temperature").append(content1);
    $("#humidity").append(content2);
    $("#pressure").append(content3)

  });
  
  var settings1 = {
    "async": true,
    "crossDomain": true,
    "url": "https://api.aerisapi.com/sunmoon/moonphases/dublin,ireland?client_secret=kWoCJmXKK6zJRllu4V7svR3erxz8REztKX9trjaA&client_id=7q9qIxdUgoxF3PLVNvKu1",
    "method": "GET"
  }

  $.ajax(settings1).done(function (response) {
    console.log(response);
    var content4 = response.response.name;
    $("#moonPhase").append(str(content4));

  });
</script>





