<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <form class="uk-form-stacked uk-text-left" action="/donate" method="POST">
    <div class="uk-grid uk-grid-stack">
      <div class="uk-width-1-2@m">
        <div class="uk-margin">
          <label class="uk-form-label" for="form-stacked-text">Enter Fact</label>
          <div class="uk-form-controls">
            <input class="uk-input" id="form-stacked-text" type="number" name="amount" placeholder="Euros">
          </div>
        </div>
        <div class="uk-margin">
          <div class="uk-form-label">Fact Type</div>
          <div class="uk-form-controls">
            <label><input class="uk-radio" type="radio" name="method" value="bio-fact"> Biographical </label><br> 
            <label><input class="uk-radio" type="radio" name="method" value="science-fact"> Scientific </label>
            <label><input class="uk-radio" type="radio" name="method" value="other-fact"> Other </label>
          </div>
        </div>
      </div>
      <div class=" uk-width-1-2@m">
        <div class="uk-margin uk-text-left">
          <div class="uk-form-label">Select Scientist</div>
          <div class="uk-form-controls ">
            {{#each candidates }}
              <label> <input class="uk-radio" type="radio" name="candidate" value="{{lastName}},{{firstName}}">
                {{lastName}}, {{firstName}}</label> <br>
            {{/each}}
          </div>
        </div>
        <div class="uk-margin">
          <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>
